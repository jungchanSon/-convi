{
  "name": "commit-buddy",
  "displayName": "commit-buddy",
  "description": "AI-powered commit message recommender for better Git conventions",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "activationEvents": [
    "onCommand:commit-buddy.showStagedDiff"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commit-buddy.showStagedDiff",
        "title": "Commit Buddy: 스테이지된 변경사항 보기"
      },
      {
        "command": "commit-buddy.recommendMessage",
        "title": "Commit Buddy: AI 커밋 메시지 추천",
        "icon": {
          "light": "resources/light/convi.svg",
          "dark": "resources/dark/convi.svg"
        }
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "commit-buddy.recommendMessage",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ]
    },
    "configuration": {
      "title": "Commit Buddy",
      "properties": {
        "commitBuddy.modelName": {
          "type": "string",
          "default": "llama3.2:latest",
          "description": "Ollama에서 사용할 LLM 모델 이름"
        },
        "commitBuddy.maxDiffLength": {
          "type": "number",
          "default": 5000,
          "description": "LLM에 전송할 최대 Diff 길이 (글자 수)"
        },
        "commitBuddy.numSuggestions": {
          "type": "number",
          "default": 3,
          "description": "생성할 추천 메시지 개수"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "simple-git": "^3.27.0"
  }
}
